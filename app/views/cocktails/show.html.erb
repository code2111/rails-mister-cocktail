<h1><%= @cocktail.name %></h1>

  <ul><% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %> - <%= dose.ingredient.name %></li>
   <%= link_to "Delete a dose", cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?" } %>
  </ul>
  <% end %>
  <br>
  <%= link_to "Back to all cocktails", cocktails_path %>
  <br>
  <%= link_to "Add a dose to your cocktail", new_cocktail_dose_path(@cocktail) %>
  <br>


